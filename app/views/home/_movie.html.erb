<div class="card text-white bg-secondary mt-3">
                <div class="row">
                    <div class="col-3 m-3 no-gutter">
                        <%= image_tag movie.image_location, size: '150x150'%>
                        <br />
                        <% (1..5).each do |i| %>
                            <% if movie.rating >= i %>
                                <%= image_tag "star-filled.png", size: '25x25', class: "m-0 p-0 mb-3" %>
                            <% else %>
                                <%= image_tag "star-empty.png", size: '25x25', class: "m-0 p-0 mb-3" %>
                            <% end %>
                        <% end %>
                    </div>
                    <div class="col">
                        <div class="card-body">
                            <%= link_to movie.title, movie_path(:id => movie.id), class: "h4 text-white" %>
                            <p class="card-text">
                            Release date: <%= movie.release_date %>
                            <br />
                            Genres: <%= movie.genres.join(", ") %>
                            </p>
                            <div id="review-section"></div>
                            <div class="row">
                                <%= link_to "View More Reviews", movie_path(:id => movie.id), class: "text-white mr-3" %>
                                <%= link_to "Write A Review", new_movie_review_path(:movie_id => movie.id), class: "text-white" %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>