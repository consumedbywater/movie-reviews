<div class="row align-content-center justify-content-center">
    <h1 class="text-muted">Movie Spotlight</h1>
</div>
<div class="container">
    <div class="row">
        <div class="col-8">
            <div class="row mt-3">
                <h5 class='font-weight-bold text-secondary my-auto'>Order By: </h5>
                <div class="btn-group ml-3" role="group" aria-label="order by">
                    <button type="button" class="btn btn-secondary movie-control" id="title-button">Title</button>
                    <button type="button" class="btn btn-secondary movie-control" id="release-button">Release Date</button>
                    <button type="button" class="btn btn-secondary movie-control" id="genre-button">Genre</button>
                    <button type="button" class="btn btn-secondary movie-control" id="popularity-button">Popularity</button>
                </div>
                <div class='form-group my-auto ml-3'>
                    <select class="btn btn-secondary" id='genre-select'>
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-8">
            <div id="movie-cards">
                <div id="movie-list"></div>            
            </div>
        </div>
        <div class="col-4">
            <div class="card text-white bg-secondary mt-2">
                <h5 class="card-title">Recent Reviews</h5>
                <%= render partial: "recent_review", collection: @recent_reviews %>
                <%= link_to "View All Reviews", reviews_path, class: "text-white ml-auto mr-1 mb-1" %>
            </div>
            <div class="card text-white bg-secondary mt-3">
                <h5 class="card-title">Recent Movies</h5>
                <%= render partial: "recent_movie", collection: @recent_movies %>
                <%= link_to "View All Movies", movies_path, class: "text-white ml-auto mr-1 mb-1" %>
            </div>
        </div>
    </div>
</div>